{
 "Version": "2012–10–17",
 "Statement": [
  {
   "Effect": "Allow",
   "Action": [
   "s3:GetBucketLocation",
   "s3:ListAllMyBuckets"
  ],
   "Resource": "arn:aws:s3:::*"
  },
  {
   "Effect": "Allow",
   "Action": ["s3:ListBucket"],
   "Resource": ["arn:aws:s3:::{{ aws_storage_bucket_name }}"]
  },
  {
   "Effect": "Allow",
   "Action": [
    "s3:GetObject"
   ],
  "Resource": ["arn:aws:s3:::{{ aws_storage_bucket_name }}/*"]
  }
 ]
}